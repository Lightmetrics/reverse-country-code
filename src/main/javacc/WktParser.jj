options {
    STATIC = false;
    IGNORE_CASE = true;
}

PARSER_BEGIN( WktParser )
    package com.github.countrycode.reverse;

    import java.util.ArrayList;
    import java.util.List;

    class WktParser {
    }
PARSER_END( WktParser )

SKIP: { " " | "\t" | "\n" | "\r" }
TOKEN: { < REAL: ("-")? (["0"-"9"])+ ("." (["0"-"9"])*)? > }

Geometry parse():
{
    Geometry geo;
}
{
    ( "MULTIPOLYGON" geo = multiPolygon() | "POLYGON" geo = polygon() )
    <EOF>
    {
        return geo;
    }
}

MultiPolygon multiPolygon():
{
    List<Polygon> polys = new ArrayList<Polygon>();
}
{
    "(" { polys.add(polygon()); } ( "," { polys.add(polygon()); } )* ")"
    {
        return new MultiPolygon(polys);
    }
}

Polygon polygon():
{
    LinearRing ring;
    List<LinearRing> holes = new ArrayList<LinearRing>();
}
{
    "(" ring = ring() ( "," { holes.add(ring()); } )* ")"
    {
        return new Polygon(ring, holes);
    }
}

LinearRing ring():
{
    List<Point> points = new ArrayList<Point>();
}
{
    "(" { points.add(point()); } ( "," { points.add(point()); } )* ")"
    {
        return new LinearRing(points);
    }
}

Point point():
{
    Double lat, lon;
}
{
    lon = real() lat = real()
    {
        return new Point(lat, lon);
    }
}

Double real():
{
    Token t;
}
{
    t = <REAL>
    {
        return Double.valueOf(t.image);
    }
}
